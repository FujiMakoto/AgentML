<saml version="0.1" xmlns="">
    <!-- Hello, Yuki! -->
    <trigger>
        <pattern>(hello|hi|hiya|good evening|good morning)</pattern>

        <response>
            <topic>introduction</topic>
            <limit>15</limit>

            <template>
                <random>
                    <item>Hi! What is your name?</item>
                    <item>Hello! What's your name?</item>
                    <item>Hiya! Who are you?</item>
                </random>
            </template>
        </response>
    </trigger>

    <topic name="introduction">
        <trigger>
            <pattern>(_)</pattern>

            <response>
                <topic/>

                <template>
                    <random>
                        <item weight="3">Hello <star format="title"/>, it's nice to meet you!</item>
                        <item>Nice to meet you, <star format="title"/>!</item>
                        <item>Hi <star format="title"/>, my name is Yuki!</item>
                    </random>
                </template>
            </response>
        </trigger>
    </topic>

    <!-- Chance test -->
    <trigger>
        <pattern>chance</pattern>

        <response>
            <limit>3</limit>
            <chance>40</chance>
            <template>Success!</template>
        </response>
    </trigger>

    <!-- Var tests -->
    <trigger>
        <pattern>get user var (_)</pattern>

        <response>
            <template><var><star/></var></template>
        </response>
    </trigger>

    <trigger>
        <pattern>get global var (_)</pattern>

        <response>
            <template><var type="global"><star/></var></template>
        </response>
    </trigger>

    <trigger>
        <pattern>set user var (_) to (*)</pattern>

        <response>
            <template>Setting user variable <star/> to <star index="2"/></template>
            <var>
                <name><star/></name>
                <value><star index="2"/></value>
            </var>
        </response>
    </trigger>

    <trigger>
        <pattern>set global var (_) to (*)</pattern>

        <response>
            <template>Setting global variable <star/> to <star index="2"/></template>
            <var type="global">
                <name><star/></name>
                <value><star index="2"/></value>
            </var>
        </response>
    </trigger>
</saml>