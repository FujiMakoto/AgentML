<saml version="0.1" xmlns="">
    <trigger>
        <pattern>(hello|hi|hiya|good evening|good morning)</pattern>

        <response>
            <message>
                <random>
                    <item>Hi! What is your name?</item>
                    <item>Hello! What's your name?</item>
                    <item>Hiya! Who are you?</item>
                </random>
            </message>

            <topic>introduction</topic>
            <limit>15</limit>
        </response>
    </trigger>

    <topic name="introduction">
        <trigger>
            <pattern>(_)</pattern>

            <response weight="3">Hello <star format="title"/>, it's nice to meet you!</response>
            <response>Nice to meet you, <star format="title"/>!</response>
            <response>Hi <star format="title"/>, my name is Yuki!</response>
        </trigger>
    </topic>
</saml>